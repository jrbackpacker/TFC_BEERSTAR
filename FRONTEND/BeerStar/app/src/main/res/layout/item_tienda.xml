<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:background="@drawable/fonfoc"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"> <!-- Centra todo el contenido dentro del LinearLayout -->

        <!-- ImageView para mostrar la imagen del producto -->
        <ImageView
            android:id="@+id/imagen_articulo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:contentDescription="Imagen del producto"
            android:visibility="visible"
            android:layout_gravity="center"/> <!-- Centra la imagen dentro del LinearLayout -->

        <!-- Nombre del artículo -->
        <TextView
            android:id="@+id/nombre_articulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/> <!-- Centra el texto -->

        <!-- Descripción del artículo -->
        <TextView
            android:id="@+id/descripcion_articulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"/> <!-- Centra el texto -->

        <!-- Precio del artículo -->
        <TextView
            android:id="@+id/precio_articulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"/> <!-- Centra el texto -->

        <!-- Mostrar la graduación alcohólica -->
        <TextView
            android:id="@+id/graduacion_articulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"/> <!-- Centra el texto -->

        <!-- Nombre de la categoría -->
        <TextView
            android:id="@+id/categoria_articulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"/> <!-- Centra el texto -->

        <!-- Botón para agregar al carrito -->
        <Button
            android:id="@+id/boton_agregar_carrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir"
            android:backgroundTint="@color/gold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center"/> <!-- Centra el botón -->
    </LinearLayout>
</androidx.cardview.widget.CardView>
